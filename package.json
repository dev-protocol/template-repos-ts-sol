{
	"name": "template-repos-ts-sol",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "del 'artifacts'",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "2.2.3",
		"@nomiclabs/hardhat-etherscan": "3.1.7",
		"@nomiclabs/hardhat-waffle": "2.0.6",
		"@openzeppelin/contracts": "4.8.2",
		"@types/chai": "4.3.10",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "10.0.4",
		"@types/node": "20.9.0",
		"@typescript-eslint/eslint-plugin": "6.10.0",
		"@typescript-eslint/parser": "6.10.0",
		"chai": "4.3.10",
		"del-cli": "5.1.0",
		"dotenv": "16.3.1",
		"eslint": "8.53.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-config-xo": "0.43.1",
		"eslint-config-xo-typescript": "1.0.1",
		"ethereum-waffle": "4.0.10",
		"ethers": "5.7.2",
		"hardhat": "2.19.0",
		"husky": "8.0.3",
		"mocha": "10.2.0",
		"prettier": "2.8.8",
		"prettier-plugin-solidity": "1.1.3",
		"ts-node": "10.9.1",
		"typescript": "5.2.2"
	},
	"dependencies": {
		"@openzeppelin/contracts-upgradeable": "^4.4.2",
		"@typechain/ethers-v5": "^11.0.0",
		"@typechain/hardhat": "^7.0.0",
		"solhint": "^4.0.0",
		"typechain": "^8.0.0"
	}
}
