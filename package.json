{
	"name": "template-repos-ts-sol",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "yarn generate && mocha --require ts-node/register 'test/**/*.ts' --timeout 300000 --parallel",
		"deploy": "yarn generate && node build/scripts/scripts/deploy.js",
		"pretest": "yarn generate",
		"generate": "mkdir -p build && waffle waffle-config.json && tsc --build ./tsconfig.json",
		"predeploy": "yarn build",
		"lint": "yarn lint:eslint && yarn lint:solium && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:solium": "solium --dir . --fix",
		"lint:format": "prettier --write '**/*.{sol,js,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@openzeppelin/contracts": "^3.1.0",
		"@types/chai": "^4.2.12",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "^8.0.0",
		"@typescript-eslint/eslint-plugin": "3.7.0",
		"@typescript-eslint/parser": "3.7.0",
		"bignumber.js": "9.0.0",
		"chai": "^4.2.0",
		"dotenv": "8.2.0",
		"eslint": "7.5.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-config-xo": "0.32.1",
		"eslint-config-xo-typescript": "0.31.0",
		"eslint-plugin-prettier": "3.1.4",
		"ethereum-waffle": "^3.0.2",
		"ethlint": "1.2.5",
		"husky": "4.2.5",
		"mocha": "8.0.1",
		"prettier": "2.0.5",
		"prettier-plugin-solidity": "1.0.0-alpha.54",
		"ts-node": "8.10.2",
		"typescript": "3.9.7",
		"web3": "1.2.11"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	}
}
