{
	"name": "template-repos-ts-sol",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "del 'artifacts'",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "2.0.4",
		"@nomiclabs/hardhat-waffle": "2.0.1",
		"@openzeppelin/contracts": "4.4.2",
		"@types/chai": "4.3.0",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "9.0.0",
		"@types/node": "16.11.19",
		"@typescript-eslint/eslint-plugin": "5.9.1",
		"@typescript-eslint/parser": "5.9.1",
		"chai": "4.3.4",
		"del-cli": "4.0.1",
		"dotenv": "12.0.2",
		"eslint": "8.6.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-config-xo": "0.39.0",
		"eslint-config-xo-typescript": "0.44.0",
		"ethereum-waffle": "3.4.0",
		"ethers": "5.5.3",
		"hardhat": "2.8.2",
		"husky": "7.0.4",
		"mocha": "9.1.4",
		"prettier": "2.5.1",
		"prettier-plugin-solidity": "1.0.0-beta.19",
		"ts-node": "10.4.0",
		"typescript": "4.5.4"
	},
	"dependencies": {
		"@openzeppelin/contracts-upgradeable": "^4.4.2",
		"@typechain/ethers-v5": "^9.0.0",
		"@typechain/hardhat": "^2.3.0",
		"solhint": "^3.3.2",
		"typechain": "^7.0.0"
	}
}
